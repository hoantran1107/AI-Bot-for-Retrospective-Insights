# Application Configuration
APP_NAME=AI Retrospective Insights
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Database
DATABASE_URL=sqlite:///./retro_insights.db
# For production with PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/retro_insights

# Redis (for Celery)
REDIS_URL=redis://localhost:6379/0

# External Metrics API
EXTERNAL_METRICS_API_URL=
EXTERNAL_METRICS_API_KEY=

# LLM Configuration
# Options: openai, anthropic, azure
LLM_PROVIDER=openai
CHAT_COMPLETION_API_KEY=your-api-key-here
LLM_MODEL=gpt-4

# Azure OpenAI Configuration (only needed if LLM_PROVIDER=azure)
AZURE_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_API_VERSION=2024-02-15-preview
AZURE_DEPLOYMENT=your-deployment-name

# Analysis Configuration
DEFAULT_SPRINT_COUNT=5
TREND_THRESHOLD=0.20
CORRELATION_THRESHOLD=0.6
CONFIDENCE_HIGH_THRESHOLD=0.8
CONFIDENCE_MEDIUM_THRESHOLD=0.5

